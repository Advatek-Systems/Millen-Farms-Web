@model IEnumerable<Model.Production>

@{
    ViewBag.Title = "Fresh Production";
}
<div class="card border-dark">
    <div class="card-body text-center">
        @Html.ActionLink("Back", "ManageProduction", null, new { @class = "btn btn-danger mb-3", @style = "display:block;" })
        <h2>Fresh Production</h2>
        <br />
        <p>@Html.ActionLink("Search by Dates", "SearchFreshProductionByDates", null, new { @class = "btn btn-primary" })</p>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div class="form-group">
                    Search (Top 1000):
                    <div class="col">
                        @Html.TextBox("searchString", null, new { @class = "form-control border-dark" })
                    </div>
                </div>
            </div>
        }
        <br />
        @if (Model.Count() > 0)
        {
            <div style="height:60vh; overflow-y:scroll;">
                <table class="table table-striped table-light">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.LotNo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SerialNo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FullSkidNo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BoxName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BoxWeightLB)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.InsDateTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StateCodeName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CustomerName)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.LotNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SerialNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FullSkidNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BoxName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BoxWeightLB)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InsDateTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StateCodeName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerName)
                            </td>
                            <td>
                                @Html.ActionLink("Details", "ProductionDetails", new { serialNumber = item.SerialNo }, new { @class = "btn btn-warning" })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        }
        else
        {
        <h2>There are no results!</h2>
        }
    </div>
</div>