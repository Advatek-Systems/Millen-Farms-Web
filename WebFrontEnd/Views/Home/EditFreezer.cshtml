@model Model.Freezer

@{
    ViewBag.Title = "Edit Freezer";
}
<div class="card border-dark">
    <div class="card-body text-center">
        @Html.ActionLink("Back", "ManageFreezers", null, new { @class = "btn btn-danger mb-3", @style = "display:block;" })
        <h2>Edit Freezer</h2>
        <br />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.FreezerID)
            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(model => model.FreezerName, htmlAttributes: new { @class = "control-label col" })
                    <div class="col">
                        @Html.EditorFor(model => model.FreezerName, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <br />
                <p class="text-danger">@ViewBag.Msg</p>
                <div class="form-group">
                    <div class="col">
                        <input type="submit" value="Save" class="btn btn-success" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>