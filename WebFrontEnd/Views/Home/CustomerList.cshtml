@model IEnumerable<Model.Customer>

@{
    ViewBag.Title = "Manage Customers";
}
<div class="card border-dark">
    <div class="card-body text-center">
        @Html.ActionLink("Back", "SetupModule", null, new { @class = "btn btn-danger mb-3", @style = "display:block;" })
        <h2>Manage Customers</h2>
        <br />
        <p>
            @Html.ActionLink("Create New Customer", "CreateCustomer", null, new { @class = "btn btn-primary" })
        </p>
        <table class="table table-striped table-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CustomerID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>@Html.ActionLink("Edit", "EditCustomer", new { id = item.CustomerID }, new { @class = "btn btn-warning" })</td>
                </tr>
            }
        </table>
    </div>
</div>